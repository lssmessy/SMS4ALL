<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mobile:"
        android:id="@+id/textView4"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mobile Number"
        android:id="@+id/mobileText"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/timeText"
        android:layout_alignStart="@+id/timeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Message:"
        android:id="@+id/msgTitle"
        android:paddingLeft="10dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Message Text"
        android:id="@+id/msgText"


        android:scrollbars="vertical"
        android:layout_above="@+id/timeText"
        android:layout_alignLeft="@+id/timeText"
        android:layout_alignStart="@+id/timeText"
        android:paddingTop="5dp"
        android:layout_below="@+id/mobileText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time:"
        android:id="@+id/timeTitle"
        android:layout_marginTop="40dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/msgTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time text"
        android:id="@+id/timeText"
        android:layout_above="@+id/statusTitle"
        android:layout_alignLeft="@+id/statusText"
        android:layout_alignStart="@+id/statusText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status: "
        android:id="@+id/statusTitle"
        android:layout_below="@+id/timeTitle"
        android:layout_alignLeft="@+id/timeTitle"
        android:layout_alignStart="@+id/timeTitle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status"
        android:id="@+id/statusText"

        android:layout_alignBottom="@+id/statusTitle"
        android:layout_centerHorizontal="true" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/deleteButton"
        android:layout_marginTop="35dp"
        android:onClick="deleteMessage"
        android:layout_below="@+id/statusTitle"
        android:background="#FF5252"
        android:layout_toRightOf="@+id/timeTitle"
        android:layout_toEndOf="@+id/timeTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend"
        android:id="@+id/resendButton"
        android:layout_alignBottom="@+id/deleteButton"
        android:layout_toRightOf="@+id/statusText"
        android:layout_toEndOf="@+id/statusText"
        android:background="#03A9F4" />

    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_below="@+id/resendButton"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#727272"
        android:layout_marginTop="10dp" />

</RelativeLayout>
